<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col">
      <h1 class="text-center mb-4">New Game</h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="letters-grid">
      <% @letters.each do |letter| %>
        <div class="letter-cell">
          <%= letter %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="container form-container">
    <div class="mb-3">
      <form action="/score" method="post" data-turbo="false">
        <div class="mb-3">
          <label for="word">What is the longest word you can find?</label>
          <div class="input-bar d-flex">
            <input type="text" name="word" class="form-control">
            <input type="hidden" name="letters" value="<%= @letters.join(',') %>">
            <input type="submit" value="Play" class="btn btn-primary">
          </div>
        </div>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      </form>
    </div>
  </div>
</div>
